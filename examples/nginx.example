upstream uwsgi_software_portal {
        server unix:/opt/software_portal/uwsgi/uwsgi.sock;
}

server {
        listen 80;
        server_name exceltech.com.bd www.exceltech.com.bd;

        access_log /opt/software_portal/logs/access.log;
        error_log /opt/software_portal/logs/error.log;

        charset utf-8;
        client_max_body_size 16M;

        location /static {
                alias /opt/software_portal/static;
        }

        location /media {
                alias /opt/software_portal/media;
        }

        location / {
                uwsgi_pass uwsgi_software_portal;
                include uwsgi_params;
                uwsgi_read_timeout 300s;
                uwsgi_send_timeout 300s;
        }
}